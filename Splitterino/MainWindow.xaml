<Window x:Class="Splitterino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Splitterino"
        mc:Ignorable="d"
        Title="Splitterino" Height="655.484" Width="300">
    <Grid>
        <TextBlock x:Name="MainTimerDisplay" HorizontalAlignment="Left" Height="43" Margin="10,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" TextAlignment="Right" FontFamily="Segoe UI Emoji" FontSize="36" FontWeight="Bold"/>
        <TabControl HorizontalAlignment="Left" Height="104" Margin="0,522,0,0" VerticalAlignment="Top" Width="293">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <TextBlock x:Name="GameTitle" HorizontalAlignment="Left" Height="44" Margin="10,10,0,0" TextWrapping="Wrap" Text="The Legend of Splitteroni: LiveSplit to the past" VerticalAlignment="Top" Width="273" TextAlignment="Center" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Height="11" Margin="10,54,0,0" VerticalAlignment="Top" Width="273"/>
        <ListView HorizontalAlignment="Left" Height="330" Margin="10,118,0,0" VerticalAlignment="Top" Width="273">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Startbtn" Content="Start" HorizontalAlignment="Left" Margin="10,453,0,0" VerticalAlignment="Top" Width="75" Click="Startbtn_Click_1"/>
        <Button x:Name="Stopbtn" Content="Stop" HorizontalAlignment="Left" Margin="90,453,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
