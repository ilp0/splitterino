<Window x:Class="Splitterino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Splitterino"
        mc:Ignorable="d"
        Title="Splitterino" Height="729.706" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <TextBlock x:Name="MainTimerDisplay" HorizontalAlignment="Left" Height="43" Margin="10,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" TextAlignment="Right" FontFamily="Segoe UI Emoji" FontSize="36" FontWeight="Bold" Text="00:00.00"/>
        <TabControl HorizontalAlignment="Left" Height="224" Margin="0,478,0,0" VerticalAlignment="Top" Width="293">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <TextBlock x:Name="GameTitle" HorizontalAlignment="Left" Height="44" Margin="10,10,0,0" TextWrapping="Wrap" Text="The Legend of Splitteroni: LiveSplit to the past" VerticalAlignment="Top" Width="273" TextAlignment="Center" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Height="11" Margin="10,54,0,0" VerticalAlignment="Top" Width="273"/>
        <ListBox x:Name="elapsedtimeitem" HorizontalAlignment="Left" Height="330" VerticalAlignment="Top" Width="273" Margin="10,118,0,0"/>
        <Button x:Name="Startbtn" Content="Start/Continue" HorizontalAlignment="Left" Margin="10,453,0,0" VerticalAlignment="Top" Width="113" Click="Startbtn_Click_1"/>
        <Button x:Name="Stopbtn" Content="Pause" HorizontalAlignment="Left" Margin="128,453,0,0" VerticalAlignment="Top" Width="75" Click="Stopbtn_Click_1"/>
        <Button x:Name="Resetbtn" Content="Reset" HorizontalAlignment="Left" Margin="208,453,0,0" VerticalAlignment="Top" Width="75" Click="Resetbtn_Click"/>

    </Grid>
</Window>
