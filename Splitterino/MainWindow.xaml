<Window x:Class="Splitterino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Splitterino"
        mc:Ignorable="d"
        Title="Splitterino" Height="706.206" Width="376" ResizeMode="CanMinimize">
    <Grid Margin="0,0,4,0">
        <TextBlock x:Name="MainTimerDisplay" Height="60" Margin="10,92,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" FontFamily="Segoe UI Emoji" FontSize="36" FontWeight="Bold" Text="00:00.00"/>
        <TabControl Margin="10,488,10,10">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="13*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <TextBlock x:Name="GameTitle" Height="44" Margin="10,10,10,0" TextWrapping="Wrap" Text="The Legend of Splitteroni: LiveSplit to the past" VerticalAlignment="Top" TextAlignment="Center" FontSize="16"/>
        <Separator Margin="10,54,10,636"/>
        <ListBox x:Name="elapsedtimeitem" HorizontalAlignment="Right" Height="291" VerticalAlignment="Top" Width="108" Margin="0,157,10,0"/>
        <Grid Margin="10,453,10,174">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="Startbtn" Content="Start new" Click="Startbtn_Click" Height="20" VerticalAlignment="Top" Margin="0,0,267,0"/>
            <Button x:Name="Stopbtn" Content="Pause/Continue" Margin="84,0,162,0" VerticalAlignment="Top" Click="Stopbtn_Click"/>
            <Button x:Name="Splitbtn" Content="Split" Margin="189,0,82,0" VerticalAlignment="Top" Click="Splitbtn_Click"/>
            <Button x:Name="Resetbtn" Content="Reset" Margin="269,0,0,0" VerticalAlignment="Top" Click="Resetbtn_Click"/>

        </Grid>

        <TextBlock x:Name="ConsoleTitle" HorizontalAlignment="Left" Margin="10,59,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="28" Width="203"/>
        <TextBlock x:Name="CategoryTitle" HorizontalAlignment="Right" Margin="0,59,10,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="28" Width="170"/>
        <ListBox x:Name="Splititemlist" Height="291" VerticalAlignment="Top" Margin="10,157,123,0" SelectionChanged="Splititemlist_SelectionChanged"/>

    </Grid>
</Window>
